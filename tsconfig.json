{
  "compilerOptions": {
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "inlineSources": false,
    "noImplicitAny": true,
    "lib": ["ES5", "DOM", "es2015.collection", "ES2015.Promise"],
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "build",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/themes/declaration.d.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.stories.ts",
    "src/**/*.test.tsx",
    "dist",
    "lib",
    "build"
  ]
}
